            crossorigin="anonymous"></script>
</head>
<body style="text-align:center;color:white;background-color: #1F0F0F;">
<div class="container">
    <h1 style="padding-bottom:30px">- Add an exam -</h1>

    {{ form_start(form) }}
    {{ form_rest(form) }}

    <button type="submit" class="btn btn-success">Add exam to database</button>
    {{ form_end(form) }}

    <div style="margin-top:30px">
        <a href={{ path('exam_list') }}>
            <button type="button" class="btn btn-primary">Back to Exams list</button>
        </a>
    </div>
</div>
<style>
    .btn {
        border: none;
    }

    .btn-success {
        background: green;
    }

    .btn-danger {
        background: #9C0900;
    }

    .btn-warning {
        background: orange;
    }

    .btn-primary {
        background: #1AA4FF;
    }

    .row {
        border-radius: 6px;
    }
</style>
</body>
</html>
