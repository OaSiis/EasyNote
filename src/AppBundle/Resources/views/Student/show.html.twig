<!doctype HTML>
<html>
<head>
    <title>- Add Student -</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css" integrity="sha384-aUGj/X2zp5rLCbBxumKTCw2Z50WgIr1vs/PFN4praOTvYXWlVyh2UtNUU0KAUhAX" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
</head>
<body style="text-align:center;color:white;background-color: #1F0F0F;">
<div class="container">
    <h1 style="padding-bottom:30px">- {{ student.firstName|capitalize }} {{ student.lastName|capitalize }} -</h1>
    <div class="container">
        <div class="row" style="margin:5px;background:@;padding-top:5px;padding-bottom:5px;height:45px;">
            <div class="col-xs-8" style="line-height:35px">
                <div class="col-xs-10">
                    <strong>Grades</strong>
                </div>
                <div class="col-xs-2">
                    <strong>Exam</strong>
                </div>
            </div>
        </div>
    </div>
    {% for grade in grades %}
        <div class="container">
            <div class="row" style="margin:5px;background:rgb(42, 35, 35);padding-top:5px;padding-bottom:5px;height:45px;">
                <div class="col-xs-8" style="line-height:35px">
                    <div class="col-xs-10">
                        {{ grade.gradeNumber }} / 20
                    </div>
                    <div class="col-xs-2">
                        {{ grade.exam }}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    <div style="margin-top:30px">
        <a href={{ path('student_list')}}><button type="button" class="btn btn-primary">Back to Students list</button></a>
    </div>
</div>
<style>
    .btn {
        border: none;
    }
    .btn-success {
        background: green;
    }
    .btn-danger{
        background: #9C0900;
    }
    .btn-warning{
        background: orange;
    }
    .btn-primary {
        background: #1AA4FF;
    }
    .row{
        border-radius:6px;
    }
</style>
</body>
</html>
